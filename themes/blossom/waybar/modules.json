{
  "hyprland/workspaces": {
    "on-click": "activate",
    "active-only": false,
    "all-outputs": true,
    "format": "{icon}",
    "format-icons": {
      "1": "󰲠",
      "2": "󰲢",
      "3": "󰲤",
      "4": "󰲦",
      "5": "󰲨",
      "urgent": "󰀨",
      "active": "󰮯",
      "default": "󰊠"
    },
    "persistent-workspaces": {
      "*": 5
    }
  },

  "hyprland/window": {
    "format": "{title}",
    "max-length": 50,
    "rewrite": {
      "(.*) - Brave": "󰈹 $1",
      "(.*) - Firefox": "󰈹 $1",
      "(.*) - Chromium": "󰈹 $1",
      "(.*) - Code": "󰨞 $1",
      "(.*) - Discord": "󰙯 $1",
      "(.*) - Spotify": "󰓇 $1"
    },
    "separate-outputs": true
  },

  "custom/exit": {
    "format": "󰐥",
    "tooltip-format": "Power Menu • Click to logout",
    "on-click": "wlogout -b 4",
    "tooltip": true
  },

  "clock": {
    "format": "{:%H:%M}",
    "format-alt": "{:%A, %B %d}",
    "tooltip-format": "<big>{:%B %Y}</big>\n<tt><small>{calendar}</small></tt>"
  },

  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-bluetooth": "󰂰 {volume}%",
    "format-bluetooth-muted": "󰂲",
    "format-muted": "󰖁",
    "format-icons": {
      "headphone": "󰋋",
      "hands-free": "󰋎",
      "headset": "󰋎",
      "phone": "󰏲",
      "portable": "󰦧",
      "car": "󰄋",
      "default": ["󰕿", "󰖀", "󰕾"]
    },
    "scroll-step": 5,
    "on-click": "GTK_THEME=Adwaita-dark pavucontrol",
    "on-click-right": "pactl set-sink-mute @DEFAULT_SINK@ toggle"
  }
}
