{
  "custom/workspaces-left": {
    "exec": "~/.config/waybar/scripts/main-left.sh",
    "return-type": "html",
    "interval": 0.1,
    "restart-interval": 1
  },
  "custom/workspaces-right": {
    "exec": "~/.config/waybar/scripts/main-right.sh",
    "return-type": "html",
    "interval": 1,
    "restart-interval": 1
  },
  "hyprland/window": {
    "format": "{}",
    "max-length": 50,
    "rewrite": {
      "(.*) - Brave": "BROWSER :: $1",
      "(.*) - Firefox": "BROWSER :: $1",
      "(.*) - Chromium": "BROWSER :: $1",
      "(.*) - Code": "EDITOR :: $1",
      "(.*) - Discord": "CHAT :: $1",
      "(.*) - Spotify": "AUDIO :: $1",
      "": "="
    },
    "separate-outputs": true
  },
  "clock": {
    "format": "{:%H:%M}",
    "format-alt": "{:%d.%m.%Y}",
    "tooltip-format": "<span font='JetBrains Mono Bold 12'>{:%A %d %B %Y}</span>"
  },
  "memory": {
    "format": "MEM {percentage}%",
    "tooltip-format": "RAM: {used:0.1f}G / {total:0.1f}G\nSWAP: {swapUsed:0.1f}G / {swapTotal:0.1f}G",
    "interval": 2,
    "on-click": "kitty -e btop"
  },
  "pulseaudio": {
    "format": "VOL {volume}%",
    "format-bluetooth": "BT {volume}%",
    "format-bluetooth-muted": "BT MUTE",
    "format-muted": "MUTE",
    "scroll-step": 2,
    "on-click": "GTK_THEME=Adwaita-dark pavucontrol",
    "on-click-right": "pactl set-sink-mute @DEFAULT_SINK@ toggle"
  }
}
