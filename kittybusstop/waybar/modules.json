{
  "hyprland/workspaces": {
    "on-click": "activate",
    "active-only": false,
    "all-outputs": false,
    "format": "{icon}",
    "format-icons": {
      "1": "󰲠",
      "2": "󰲢",
      "3": "󰲤",
      "4": "󰲦",
      "5": "󰲨",
      "6": "󰲪",
      "urgent": "󰀨",
      "active": "󰮯",
      "default": "󰊠"
    },
    "persistent-workspaces": {
      "DP-1": [1, 2, 3, 4],
      "HDMI-A-1": [5, 6]
    }
  },
  "hyprland/window": {
    "format": "{title}",
    "max-length": 50,
    "rewrite": {
      "(.*) - Brave": "󰈹 $1",
      "(.*) - Firefox": "󰈹 $1",
      "(.*) - Chromium": "󰈹 $1",
      "(.*) - Code": "󰨞 $1",
      "(.*) - Discord": "󰙯 $1",
      "(.*) - Spotify": "󰓇 $1"
    },
    "separate-outputs": true
  },
  "clock": {
    "format": "{:%d - %H:%M}",
    "format-alt": "{:%A, %B %d}",
    "tooltip-format": "<big>{:%B %Y}</big>\n<tt><small>{calendar}</small></tt>"
  },
  "memory": {
    "format": "{used:0.2f} GiB / {total:0.2f} GiB",
    "interval": 5
  },
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-bluetooth": "󰂰 {volume}%",
    "format-bluetooth-muted": "󰂲",
    "format-muted": "󰖁",
    "format-icons": {
      "headphone": "󰋋",
      "hands-free": "󰋎",
      "headset": "󰋎",
      "phone": "󰏲",
      "portable": "󰦧",
      "car": "󰄋",
      "default": ["󰕿", "󰖀", "󰕾"]
    },
    "scroll-step": 5,
    "on-click": "GTK_THEME=Adwaita-dark pavucontrol",
    "on-click-right": "pactl set-sink-mute @DEFAULT_SINK@ toggle"
  }
}
